<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/loguide_logo"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/loguide_bgwhite"/>

    <EditText
        android:layout_gravity="center"
        android:inputType="text"
        android:id="@+id/name_feedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_corner_feedback"
        android:hint="Name"
        android:textColorHint="@color/colorPrimarylight"
        android:textColor="@color/black"/>

    <EditText
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:id="@+id/email_feddback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_corner_feedback"
        android:hint="Email Address"
        android:textColorHint="@color/colorPrimarylight"
        android:textColor="@color/black"/>

    <EditText
        android:layout_gravity="center"
        android:inputType="text"
        android:id="@+id/subject_feedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_corner_feedback"
        android:hint="Subject"
        android:textColorHint="@color/colorPrimarylight"
        android:textColor="@color/black"/>

    <EditText
        android:layout_gravity="center"
        android:inputType="text"
        android:id="@+id/message_feedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_corner_feedback"
        android:hint="Enter your feedback"
        android:textColorHint="@color/colorPrimarylight"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_corner"
        android:text="Send feedback"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</LinearLayout>